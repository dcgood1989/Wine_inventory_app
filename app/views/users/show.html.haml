.container
  .page-header
    %h1
      = @user.full_name
      - if current_user == @user || current_user.admin
        = link_to "Edit", edit_user_path, class: "btn btn-primary pull-right"
  %dl.dl-horizontal
    %p
      %dt
        %b First Name
      %dd= @user.first_name
    %p
      %dt
        %b Last Name
      %dd= @user.last_name
    %p
      %dt
        %b Email
      %dd
        = mail_to @user.email
