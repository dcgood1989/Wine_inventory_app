.container
  .page-header
    %h2 #{current_user.full_name}, Add a New Region to Your Inventory
    = form_for @region do |f|

      .form-group

        = f.label :region_name, class: "control-label"
        = f.text_field :region_name, class: "form-control"

      .form-group

        = f.label :state, class: "control-label"
        = f.text_field :state, class: "form-control"
      %br

      .form-group

        = f.label :country, class: "control-label"
        = f.text_field :country, class: "form-control"
      %br

      .form-group

        = f.submit
