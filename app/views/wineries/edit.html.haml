.container
  %h2
    Edit #{@winery.winery_name} Winery
  = form_for [@region, @winery] do |f|

    %br
    .form-group

      = f.label :winery_name, class: "control-label"
      = f.text_field :winery_name, class: "form-control"
    %br

    .form-group

      = f.label :state, class: "control-label"
      = f.text_field :state, class: "form-control"
    %br

    .form-group

      = f.label :rating, class: "control-label"
      = f.number_field :rating, class: "form-control"
    %br

    .form-group

      = f.submit class: "btn btn-danger"
      = link_to "Cancel", region_wineries_path(@region), class: "btn btn-success"
