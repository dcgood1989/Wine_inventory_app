.container

  =link_to "New Winery", new_region_winery_path, class: "btn btn-danger margin-top-button pull-right"
  %h1
    #{current_user.full_name} Wineries

  %table.table
    %thead
      %tr
        %th
          Winery Name
        %th{colspan:2}
          Winery Location
        %th.text-left
          Winery Rating
        %th
        %th
    %tbody

      - @regions.each do |region|
        - region.wineries.each do |winery|
          %tr
            %td
              = link_to winery.winery_name, region_winery_path(region, winery)

            %td
              = winery.state
            %td.text-right
              = winery.rating
            %td
              = link_to "Delete", region_winery_path(region, winery), class: "btn btn-danger pull-right",  method: :delete
              = link_to "Edit Winery", edit_region_winery_path(region, winery), class: "btn btn-primary pull-right"
